.title {
  font-family: "微软雅黑";
  font-size: 44rpx;
  text-align: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  margin-top: 40rpx;
  font-weight: bold;
}

text {
  display: block;
  font-size: 32rpx;
  line-height: 50rpx;
  font-family: "黑体";
  margin: 0 20rpx;
}

image {
  width: 100%;
  margin-top: 30rpx;
}

.date {
  font-size: 24rpx;
  margin-bottom: 14rpx;
