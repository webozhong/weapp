/* pages/navigate/navigates.wxss */
.title {
    /*border: 1px red solid;*/
    font-family: "微软雅黑";
    font-size:44rpx;
    text-align: center;
    margin-left: 30rpx;
    margin-right: 30rpx; 
    margin-bottom: 10rpx;
    margin-top: 40rpx; 
    font-weight:bold;
}
text{
    display: inline-block;
    font-size: 32rpx;
    line-height: 50rpx;
    font-family: "黑体";
    margin:0 20rpx;
}
image{
    width: 100%;
    margin:30rpx;
}
.date{
    font-size: 24rpx;
    margin-bottom:14rpx;
    /*font-weight:bold;*/
    color:#ccc;
}
.content{
    width:100%;
    padding-bottom:100rpx;
}
.bottomBar{
    width:100%;
    height:100rpx;
    background-color: #FFFFFF;
    border-top: 1px #E3E4E3 solid;
    position:fixed;
    bottom:0;
    left:0;
}

.collection{
    position:absolute;
    left:10rpx;
    top:-10rpx;
    width:60rpx;
    height:60rpx;
}
.tip{
    position:absolute;
    left:100rpx;
    top:26rpx;
    color: #9499A0;
    font-size: 30rpx;
    font-family: "微软雅黑";
}
.tiptext{
  position: absolute;
  right: 30rpx;
  top:30rpx;
  font-size: 30rpx;
  color: #9499A0;
  font-family: "微软雅黑";
}