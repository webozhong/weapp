    </navigator>
      
    </block>
  </swiper>-->

  <view wx:for="{{list}}" class="info {{item.type==0? 'big' : 'little'}}" wx:key="{{item.id}}">

    <navigator url="../navigate/navigates?data={{item.sourceName}}·{{item.date}}&title={{item.title}}&id={{item.id}}" hover-class="navigator-hover" style="display:block;height:100%">

      <!--每一项的标题-->
      <text class="title" style="margin:5px 0;display:inline-block">{{item.title}}</text>
      <view style="width:100%;height:40%;padding-bottom:5px">
        <view class="type {{item.type==0? 'big' : 'little'}}">
          <image style="width:100%; background-color: #fff;" mode="aspectFill" src="https://www.webozhong.com/thumbnails/{{item.thumbnails[0]}}">
          </image>
        </view>
        <view style="padding-left:2%" class="type {{item.type==0? 'big' : 'little'}}" hidden="{{item.type==0?  true : false}}">
          <image style="width:100%;height:100%; background-color: #fff;" mode="aspectFill" src="https://www.webozhong.com/thumbnails/{{item.thumbnails[1]}}">
          </image>
        </view>
        <view style="padding-left:2%" class="type {{item.type==0? 'big' : 'little'}}" hidden="{{item.type==0 ?  true : false}}">
          <image style="width:100%;height:100%; background-color: #fff;" mode="aspectFill" src="https://www.webozhong.com/thumbnails/{{item.thumbnails[2]}}">
          </image>
        </view>
      </view>
      
      <!--每一项的出处与时间-->
      <view class="source">
        <text >{{item.sourceName}}·{{item.date}}</text>
      </view> 
      <view class="hr"></view>
    </navigator>
  </view>
</scroll-view>